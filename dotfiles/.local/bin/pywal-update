#!/usr/bin/bash

# Kill old instances
pkill -f "dbus-monitor"

# Start the correct script
if [ "$XDG_CURRENT_DESKTOP" == "GNOME" ]; then
    nohup ~/.local/bin/gnome-pywal-update >/dev/null 2>&1 &
elif [ "$XDG_CURRENT_DESKTOP" == "KDE" ]; then
    nohup ~/.local/bin/kde-pywal-update >/dev/null 2>&1 &
fi
